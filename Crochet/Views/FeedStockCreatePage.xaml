<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Crochet.Views.FeedStockCreatePage"
             NavigationPage.HasNavigationBar="True">
    <ContentPage.Content>
        <FlexLayout Direction="Column"
                    Margin="10">
            <Entry Placeholder="Preço"
                   Text="{Binding Price}"/>
            <Entry Placeholder="Quantidade Inicial"
                   Text="{Binding Inventory}"/>
            <Entry Placeholder="TEX"
                   Text="{Binding TEX}"/>
            <Entry Placeholder="Espessura"
                   Text="{Binding Thickness}"/>
            <Picker Title="Selecione a Marca"
                    ItemsSource="{Binding Brands}"
                    ItemDisplayBinding="{Binding BrandName}"/>
            <Label FlexLayout.Grow="1"/>
            <Button Text="Salvar"
                    BackgroundColor="{StaticResource BGColor}"
                    BorderColor="{StaticResource colorAccent}"
                    BorderWidth="1"
                    Command="{Binding FeedStockCreateCommand}"/>
        </FlexLayout>
    </ContentPage.Content>

</ContentPage>